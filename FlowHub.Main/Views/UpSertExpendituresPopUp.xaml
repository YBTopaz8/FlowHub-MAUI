                                            FontSize="12" FontAttributes="Bold"/>
>>>>>>> Stashed changes

                    <Button Command="{Binding CancelBtnCommand}"
                                            Text="Cancel" BackgroundColor="{StaticResource NegativeActionBtnDark}" TextColor="White"
                                            FontSize="12" />

                </HorizontalStackLayout>


            </input:FormView>
        
        </VerticalStackLayout>
  
    </Border>
</mct:Popup>